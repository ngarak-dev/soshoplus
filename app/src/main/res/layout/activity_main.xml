<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main">

    <com.fxn.BubbleTabBar
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_8sdp"
        app:bubbletab_menuResource="@menu/bottom_navigation"
        app:bubbletab_disabled_icon_color="@color/colorPrimaryDark"
        app:bubbletab_horizontal_padding="@dimen/_10sdp"
        app:bubbletab_icon_size="@dimen/_15sdp"
        app:bubbletab_title_size="@dimen/_10ssp"
        app:bubbletab_icon_padding="@dimen/_5ssp"
        app:bubbletab_vertical_padding="@dimen/_8sdp" />

</androidx.constraintlayout.widget.ConstraintLayout>