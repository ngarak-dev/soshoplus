<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.soshoTimeline">

    <TextView
        android:id="@+id/home_tv"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Home"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/notification_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_notification"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/_20sdp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/home_tv"
        app:layout_constraintEnd_toStartOf="@id/search_btn"
        app:layout_constraintTop_toTopOf="@+id/home_tv"
        app:rippleColor="@color/light_grey"
        app:shapeAppearanceOverlay="@style/OverlayButtonCircle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/_20sdp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/home_tv"
        app:layout_constraintEnd_toStartOf="@id/settings_btn"
        app:layout_constraintTop_toTopOf="@+id/home_tv"
        app:rippleColor="@color/light_grey"
        app:shapeAppearanceOverlay="@style/OverlayButtonCircle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        app:icon="@drawable/ic_setting"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="@dimen/_25sdp"
        app:iconTint="@null"
        app:layout_constraintBottom_toBottomOf="@id/home_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/home_tv"
        app:rippleColor="@color/light_grey"
        app:shapeAppearanceOverlay="@style/OverlayButtonCircle" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/soshoViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintTop_toBottomOf="@id/search_btn" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="@null"
        app:itemRippleColor="@null"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>