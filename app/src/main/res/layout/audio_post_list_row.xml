<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/time_ago"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintTop_toTopOf="@id/profile_pic" />

    <TextView
        android:id="@+id/time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toBottomOf="@id/profile_pic"
        app:layout_constraintStart_toEndOf="@id/profile_pic"
        app:layout_constraintTop_toBottomOf="@id/full_name" />

    <TextView
        android:id="@+id/posted_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="posted audio"
        android:textColor="@color/dim_gray"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@id/full_name"
        app:layout_constraintTop_toTopOf="@id/full_name" />

    <TextView
        android:id="@+id/post_contents"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_pic" />

    <ImageView
        android:id="@+id/album_art"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/ic_music_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post_contents"
        tools:ignore="ContentDescription" />

    <com.google.android.material.chip.Chip
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipBackgroundColor="@null"
        app:chipCornerRadius="0dp"
        app:chipEndPadding="@dimen/_minus5sdp"
        app:chipIcon="@drawable/ic_play_button_filled"
        app:chipIconSize="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="@+id/album_art"
        app:layout_constraintEnd_toStartOf="@+id/stop_button"
        app:layout_constraintStart_toStartOf="@+id/album_art"
        app:layout_constraintTop_toBottomOf="@id/album_art" />

    <com.google.android.material.chip.Chip
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        app:chipBackgroundColor="@null"
        app:chipCornerRadius="0dp"
        app:chipEndPadding="@dimen/_minus5sdp"
        app:chipIcon="@drawable/ic_stop_button_filled"
        app:chipIconSize="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="@+id/album_art"
        app:layout_constraintEnd_toEndOf="@+id/album_art"
        app:layout_constraintStart_toEndOf="@+id/play_button"
        app:layout_constraintTop_toBottomOf="@id/album_art" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/play_button">

        <View
            android:id="@+id/divider_"
            style="@style/divider"
            android:layout_margin="@dimen/_10sdp" />

        <TextView
            android:id="@+id/no_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/no_likes"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/divider_"
            android:layout_toStartOf="@id/comment_btn"
            app:chipBackgroundColor="@null"
            app:chipIcon="@drawable/ic_like"
            app:chipIconSize="@dimen/_15sdp"
            app:chipStartPadding="@dimen/_15sdp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/divider_"
            android:layout_alignParentEnd="true"
            app:chipBackgroundColor="@null"
            app:chipIcon="@drawable/ic_comment"
            app:chipIconSize="@dimen/_15sdp"
            app:chipStartPadding="@dimen/_15sdp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>