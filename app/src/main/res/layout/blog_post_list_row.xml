<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/_10sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:actualImageScaleType="focusCrop"
            app:fadeDuration="300"
            app:placeholderImage="@color/light_grey"
            app:roundAsCircle="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/profile_pic"
            app:layout_constraintLeft_toRightOf="@id/profile_pic"
            app:layout_constraintBottom_toTopOf="@id/new_post"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/profile_pic"
            app:layout_constraintTop_toBottomOf="@id/full_name"
            app:layout_constraintBottom_toTopOf="@id/time_ago"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="new blog post"
            android:textColor="@color/dim_gray" />

        <TextView
            android:id="@+id/time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/profile_pic"
            app:layout_constraintBottom_toBottomOf="@id/profile_pic"
            app:layout_constraintTop_toBottomOf="@id/new_post"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_option"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:rippleColor="@color/light_grey"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:iconGravity="textStart"
            android:padding="0dp"
            app:iconTint="@color/gray"
            app:iconPadding="0dp"
            app:icon="@drawable/ic_more_horiz"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:shapeAppearanceOverlay="@style/OverlayButtonCircle"/>

        <TextView
            android:id="@+id/post_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_pic"
            android:layout_marginTop="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/article_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/post_contents"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/ic_article"
                android:drawablePadding="@dimen/_10sdp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                style="@style/divider"
                android:layout_below="@id/article_title"
                android:layout_margin="@dimen/_10sdp" />

            <TextView
                android:id="@+id/article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/article_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_description"
                android:layout_marginTop="@dimen/_10sdp"
                app:viewAspectRatio="1.5"
                app:fadeDuration="300"
                app:placeholderImage="@color/dim_gray"
                tools:ignore="ContentDescription" />

            <View
                android:id="@+id/divider_"
                style="@style/divider"
                android:layout_below="@id/article_thumbnail"
                android:layout_margin="@dimen/_10sdp" />

            <TextView
                android:id="@+id/no_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/no_likes"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/like_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/divider_"
                android:layout_toStartOf="@id/comment_btn"
                app:rippleColor="@color/light_grey"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconGravity="textStart"
                app:iconSize="@dimen/_15sdp"
                android:padding="0dp"
                app:iconPadding="0dp"
                app:icon="@drawable/ic_like"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/comment_btn"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_below="@id/divider_"
                android:layout_alignParentEnd="true"
                app:rippleColor="@color/light_grey"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:iconGravity="textStart"
                app:iconSize="@dimen/_15sdp"
                android:padding="0dp"
                app:iconPadding="0dp"
                app:icon="@drawable/ic_comment"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>