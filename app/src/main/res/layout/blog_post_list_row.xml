<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/full_name"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/time_ago"
            app:layout_constraintLeft_toRightOf="@id/profile_pic"
            app:layout_constraintTop_toTopOf="@id/profile_pic" />

        <TextView
            android:id="@+id/time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/profile_pic"
            app:layout_constraintLeft_toRightOf="@id/profile_pic"
            app:layout_constraintTop_toBottomOf="@id/full_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/post_option"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/ic_more_horiz"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@null"
            app:layout_constraintBottom_toBottomOf="@id/profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile_pic"
            app:shapeAppearanceOverlay="@style/OverlayButtonCircle" />

        <com.hendraanggrian.appcompat.widget.SocialTextView
            android:id="@+id/post_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:hashtagColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="@id/post_option"
            app:layout_constraintStart_toStartOf="@id/profile_pic"
            app:layout_constraintTop_toBottomOf="@id/profile_pic"
            app:mentionColor="@color/colorAccent"
            app:socialFlags="hashtag|mention|hyperlink" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/article_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/post_tv_background"
            android:elevation="@dimen/_5sdp"
            app:layout_constraintTop_toBottomOf="@id/post_contents">

            <com.hendraanggrian.appcompat.widget.SocialTextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:drawableStart="@drawable/ic_article"
                android:drawablePadding="@dimen/_10sdp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                style="@style/divider"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/article_title" />

            <com.hendraanggrian.appcompat.widget.SocialTextView
                android:id="@+id/article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:hashtagColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:mentionColor="@color/colorAccent"
                app:socialFlags="hashtag|mention|hyperlink" />

            <ImageView
                android:id="@+id/article_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/article_description"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider_"
            style="@style/divider"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/article_container" />

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_like"
            app:layout_constraintStart_toStartOf="@id/profile_pic"
            app:layout_constraintTop_toBottomOf="@id/divider_"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/no_likes_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Like"
            app:layout_constraintBottom_toBottomOf="@id/like_btn"
            app:layout_constraintStart_toEndOf="@id/like_btn"
            app:layout_constraintTop_toTopOf="@id/like_btn" />

        <ImageView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_chat"
            app:layout_constraintStart_toEndOf="@+id/no_likes_holder"
            app:layout_constraintTop_toBottomOf="@id/divider_"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/no_comments_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Leave a comment"
            app:layout_constraintBottom_toBottomOf="@id/comment_btn"
            app:layout_constraintStart_toEndOf="@id/comment_btn"
            app:layout_constraintTop_toTopOf="@id/comment_btn" />

        <ImageView
            android:id="@+id/show_comments_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@id/comment_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/comment_btn"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>