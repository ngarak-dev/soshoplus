<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:contentPadding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:actualImageScaleType="focusCrop"
            app:fadeDuration="300"
            app:placeholderImage="@drawable/ic_image_placeholder"
            app:roundAsCircle="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_pic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_pic"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/new_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/time_ago"
            android:layout_below="@id/full_name"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_pic"
            android:text="new blog post"
            android:textColor="@color/dim_gray" />

        <TextView
            android:id="@+id/time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profile_pic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_pic"
            android:textColor="@color/colorPrimary" />

        <com.google.android.material.chip.Chip
            android:id="@+id/post_option"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentEnd="true"
            app:chipBackgroundColor="@null"
            app:chipIcon="@drawable/ic_baseline_more_horiz"
            app:chipStartPadding="@dimen/_15sdp" />

        <TextView
            android:id="@+id/post_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_pic"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_10sdp" />

        <RelativeLayout
            android:id="@+id/article_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/post_contents"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rectangle"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:drawableStart="@drawable/ic_article"
                android:drawablePadding="@dimen/_10sdp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider"
                style="@style/divider"
                android:layout_below="@id/article_title"
                android:layout_margin="@dimen/_10sdp" />

            <TextView
                android:id="@+id/article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/article_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_description"
                android:layout_marginTop="@dimen/_10sdp"
                app:viewAspectRatio="1.5"
                app:fadeDuration="300"
                app:placeholderImage="@drawable/ic_image_placeholder"
                tools:ignore="ContentDescription" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignStart="@id/article_thumbnail"
                android:layout_alignTop="@id/article_thumbnail"
                android:layout_alignEnd="@id/article_thumbnail"
                android:layout_marginTop="@dimen/_50sdp"
                android:elevation="@dimen/_10sdp" />

            <View
                android:id="@+id/divider_"
                style="@style/divider"
                android:layout_below="@id/article_thumbnail"
                android:layout_margin="@dimen/_10sdp" />

            <TextView
                android:id="@+id/no_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@id/no_likes"
                android:textStyle="bold" />

            <com.google.android.material.chip.Chip
                android:id="@+id/like_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@id/divider_"
                android:layout_toStartOf="@id/comment_btn"
                app:chipBackgroundColor="@null"
                app:chipIcon="@drawable/ic_like"
                app:chipIconSize="@dimen/_15sdp"
                app:chipStartPadding="@dimen/_15sdp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_below="@id/divider_"
                android:layout_alignParentEnd="true"
                app:chipBackgroundColor="@null"
                app:chipIcon="@drawable/ic_comment"
                app:chipIconSize="@dimen/_15sdp"
                app:chipStartPadding="@dimen/_15sdp" />

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>