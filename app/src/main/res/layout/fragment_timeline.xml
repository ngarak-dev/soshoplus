<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgPrimary"
    tools:context=".ui.mainfragments.timelineFragment">

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/tab_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentTop="true"
        app:backgroundColor="@color/colorPrimaryDark"
        app:iconMargin="@dimen/_5sdp"
        app:iconTintActive="@color/colorPrimary"
        app:indicatorColor="@color/colorPrimaryDark"
        app:indicatorRadius="0dp"
        app:menu="@menu/tab_navigation"
        app:sideMargins="0dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/timelineViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_navigation" />

</RelativeLayout>

