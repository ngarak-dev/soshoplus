<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/group_profile_pic"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/group_category"
        app:layout_constraintStart_toEndOf="@id/group_profile_pic"
        app:layout_constraintTop_toTopOf="@id/group_profile_pic" />

    <TextView
        android:id="@+id/group_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_8ssp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/group_profile_pic"
        app:layout_constraintStart_toStartOf="@id/group_title"
        app:layout_constraintTop_toBottomOf="@id/group_title" />

    <com.google.android.material.chip.Chip
        android:id="@+id/btn_join"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_10sdp"
        android:text="Join"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/icon_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/group_profile_pic" />

    <ImageView
        android:id="@+id/icon_group"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_group"
        app:layout_constraintBottom_toTopOf="@id/total_members"
        app:layout_constraintEnd_toEndOf="@id/btn_join"
        app:layout_constraintStart_toStartOf="@id/btn_join"
        app:layout_constraintTop_toBottomOf="@+id/btn_join" />

    <TextView
        android:id="@+id/total_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/group_profile_pic"
        app:layout_constraintEnd_toEndOf="@id/icon_group"
        app:layout_constraintStart_toStartOf="@id/icon_group"
        app:layout_constraintTop_toBottomOf="@+id/icon_group" />

</androidx.constraintlayout.widget.ConstraintLayout>
