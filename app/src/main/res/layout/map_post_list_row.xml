<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:contentPadding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/profile_pic"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_10sdp"
            app:fadeDuration="300"
            app:placeholderImage="@drawable/ic_image_placeholder"
            app:roundAsCircle="true"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_pic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_pic"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profile_pic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_pic"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/checked_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/time_ago"
            android:layout_below="@id/full_name"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@id/profile_pic"
            android:text="checked in"
            android:textColor="@color/dim_gray" />

        <TextView
            android:id="@+id/post_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_pic"
            android:layout_margin="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/navigation"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_below="@id/post_contents"
            android:src="@drawable/ic_navigation"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/location_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/navigation"
            android:layout_alignBottom="@id/navigation"
            android:layout_toEndOf="@id/navigation"
            android:padding="@dimen/_10sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <View
            android:id="@+id/divider"
            style="@style/divider"
            android:layout_below="@id/navigation"
            android:layout_margin="@dimen/_10sdp" />

        <TextView
            android:id="@+id/no_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@id/no_likes"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/divider"
            android:layout_toStartOf="@id/comment_btn"
            app:chipBackgroundColor="@null"
            app:chipIcon="@drawable/ic_like"
            app:chipIconSize="@dimen/_15sdp"
            app:chipStartPadding="@dimen/_15sdp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@id/divider"
            android:layout_alignParentEnd="true"
            app:chipBackgroundColor="@null"
            app:chipIcon="@drawable/ic_comment"
            app:chipIconSize="@dimen/_15sdp"
            app:chipStartPadding="@dimen/_15sdp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>